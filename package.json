{
  "name": "micro-nervous",
  "version": "0.1.0",
  "description": "a minimal micro-services framework",
  "main": "source/index.js",
  "scripts": {
    "release": "npm run lint && npm run cc && npm run test",
    "release:patch": "npm run release && npm version patch && git push --tags",
    "release:minor": "npm run release && npm version minor && git push --tags",
    "release:major": "npm run release && npm version major && git push --tags",
    "test": "ava",
    "test-watch": "ava --watch",
    "cc": "webpack",
    "cc-watch": "webpack --watch",
    "lint": "eslint ./source ./test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjaminjt/micro-nervous.git"
  },
  "author": "Benjamin Thompson <me@benjaminjt.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benjaminjt/micro-nervous/issues"
  },
  "homepage": "https://github.com/benjaminjt/micro-nervous",
  "ava": {
    "files": [
      "**/*.test.js"
    ],
    "source": [
      "source/**/*.js"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "ava"
    ],
    "extends": [
      "plugin:ava/recommended",
      "airbnb"
    ],
    "env": {
      "node": true
    }
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "closurecompiler-externs": "^1.0.4",
    "eslint": "^3.9.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-ava": "^3.1.1",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "google-closure-compiler-js": "^20161024.0.0",
    "webpack": "^1.13.3"
  }
}
